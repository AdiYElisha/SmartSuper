@model SmartSuper.Models.ProductTypes

<h2>מחיקת מוצר</h2>

<h3>האם אתה בטוח שברצונך למחוק את המוצר הבא?</h3>
<div>
    <fieldset style="margin-left:150px">    
          <hr />
            <div class="dl-horizontal" style="float:right">
                <div>
                    <label style="font-weight:bold">@Html.DisplayNameFor(model => model.Name):</label>
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
    </fieldset>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="מחיקה" class="btn btn-default" /> |
            @Html.ActionLink("חזור", "Index")
        </div>
    }
</div>
