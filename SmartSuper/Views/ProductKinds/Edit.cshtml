@model SmartSuper.Models.ProductKinds

@{
    ViewBag.Title = "Edit";
}

<h2>עריכת פרטי סוג מוצר</h2>


@using (Html.BeginForm("Edit", "ProductKinds", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="margin-left:150px">
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.PictuerLocation)
            <div class="col-md-10">
                <img src="@ViewBag.image" style="width:100px;height:130px;">
                @Html.TextBoxFor(model => model.PictuerLocation, new { id = "pic", style = "display:none;" })
                <input type="file" id="image" name="file" />
            </div>
        </div>
    </fieldset>

    <p>
        <input type="submit" value="שמור" />
    </p>
}

<div>
    @Html.ActionLink("חזור", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
