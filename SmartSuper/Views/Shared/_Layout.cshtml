<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SmartSuper </title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <section id="login">
                @Html.Partial("_LoginPartial")
            </section>
            <nav>
                <div class="navbar-collapse collapse">
                    @{var sessionUser = (SmartSuper.Models.Customers)HttpContext.Current.Session["user"];}
                    @if (sessionUser != null)
                    {
                        <ul id="menu">
                            <li>@Html.ActionLink("דף הבית", "Index", "Home")</li>
                            <li>@Html.ActionLink("כל המוצרים", "Index", "Products")</li>
                            <li>@Html.ActionLink("סוגי מוצרים", "Index", "ProductKinds")</li>
                            <li>@Html.ActionLink("רשתות השיווק", "Index", "Supers")</li>
                            <!--         <li>@Html.ActionLink("מגוון המוצרים", "Index", "ProductTypes")</li>        -->
                            @if (sessionUser != null && sessionUser.FirstName == "admin")
                            {
                                <li>@Html.ActionLink("לקוחות", "Index", "Customer")</li>
                            }
                            @if (sessionUser != null && sessionUser.FirstName == "admin")
                            {
                                <li>@Html.ActionLink("הזמנות", "Index", "Orders")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("סל הקניות שלי", "index", "ShoppingCarts")</li>
                            }
                            <li>@Html.ActionLink("הכרות", "Hello", "Home")</li>
                            <li>@Html.ActionLink("אודות", "About", "Home")</li>
                            <li>@Html.ActionLink("צור קשר", "Contact", "Home")</li>
                        </ul>
                    }
             
                </div>
            </nav>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <p id="copyRights">© כל הזכויות שמורות לעדי אלישע וקובי מגנאזי טכנולוגיה בע"מ </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
