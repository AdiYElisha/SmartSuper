@model SmartSuper.Models.Supers

@{
    ViewBag.Title = "Create";
}

<h2>יצירת רשת חדשה</h2>


@using (Html.BeginForm("Create", "Supers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.City)
        <div class="col-md-10">
            @Html.EditorFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Street)
        <div class="col-md-10">
            @Html.EditorFor(model => model.Street)
            @Html.ValidationMessageFor(model => model.Street)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HouseNumber)
        <div class="col-md-10">
            @Html.EditorFor(model => model.HouseNumber)
            @Html.ValidationMessageFor(model => model.HouseNumber)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CoordX)
        <div class="col-md-10">
            @Html.EditorFor(model => model.CoordX)
            @Html.ValidationMessageFor(model => model.CoordX)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CoordY)
        <div class="col-md-10">
            @Html.EditorFor(model => model.CoordY)
            @Html.ValidationMessageFor(model => model.CoordY)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumber)
        <div class="col-md-10">
            @Html.EditorFor(model => model.PhoneNumber)
        </div>
    </div>

    <label>אם לא ידוע כיצד להשיג את הקוארדינטות </label>
    <a href="http://www.latlong.net/convert-address-to-lat-long.html" target="_blank">לחץ כאן</a>

    <p>
        <input type="submit" value="שמור" />
    </p>
}

<div>
    @Html.ActionLink("חזור", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
